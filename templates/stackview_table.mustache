{{!
    @template mod_stackview/stackview_table

    Example context (json):
    {
        "addurl" : "/add.php",
        "files" : [
           {
                "image" : "/test/image1.jpg",
                "filename" : "Image 1"
           },
           {
                "image" : "/test/image2.jpg" ,
                "filename" : "Image 2"
           }
        ]
    }
}}
<div class="stackview-table">
    <a href="{{addurl}}" class="btn btn-primary">
        {{# str}} btn:file_management, mod_stackview {{/ str}}
    </a>
    <hr>
    <table class="table table-striped">
        <tr>
            <th>{{# str}} thead:icon, mod_stackview {{/ str}}</th>
            <th>{{# str}} thead:name, mod_stackview {{/ str}}</th>
        </tr>
        {{#files}}
            <tr>
                <td><img src="{{image}}" style="width:100px" alt=""/></td>
                <td>{{filename}}</td>
            </tr>
        {{/files}}
    </table>
</div>
