<div data-iframe-height="iFrameResizer">
    <div class="stackviewer {{#is_embedded}}embedded{{/is_embedded}}">
        <h2>{{name}}</h2>

        <section id="slider" class="container-fluid">
            <div id="slick-slider" class="container">
                {{#files}}
                    <div class="slide">
                        <img src="{{image}}">
                    </div>
                {{/files}}
                {{^files}}
                    <div class="slide">
                        <h2>{{# str}} text:no_image, mod_stackview {{/ str}}</h2>
                    </div>
                {{/files}}
            </div>
        </section>
    </div>
</div>